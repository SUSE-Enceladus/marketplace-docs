{
    "Version" : "2012-10-17",
    "Statement" : [
        {
            "Effect" : "Allow",
            "Principal" : {
                "Federated" : "arn:aws:iam::$AWS_ACCOUNT_ID:oidc-provider/$OIDC_PROVIDER_IDENTITY"
            },
            "Action" : "sts:AssumeRoleWithWebIdentity",
            "Condition" : {
                "StringEquals" : {
                    "$OIDC_PROVIDER_IDENTITY:sub" : "system:serviceaccount:neuvector:csp",
                    "$OIDC_PROVIDER_IDENTITY:aud" : "sts.amazonaws.com"
                }
            }
        }
    ]
}

